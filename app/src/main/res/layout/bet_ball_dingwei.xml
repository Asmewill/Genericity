<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dingwei_ball"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:scaleType="fitStart"
        android:src="@mipmap/bet_first_ball"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:clipChildren="true"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_first_0"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_1"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_2"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_3"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_4"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_5"
            style="@style/lotteryBetCb"/>
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_first_6"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_7"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_8"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_9"
            style="@style/lotteryBetCb"/>

        <CheckBox
            style="@style/lotteryBetCb"
           />

        <CheckBox
            style="@style/lotteryBetCb"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_first_big"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_small"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_max"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_min"
            style="@style/lotteryBetCb"/>

        <CheckBox
            android:id="@+id/cb_first_long_and_hu_he"
            style="@style/lotteryBetCb"
            />

        <CheckBox
            style="@style/lotteryBetCb"
          />
    </LinearLayout>

</LinearLayout>